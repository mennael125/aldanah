<section class="s-block s-block--default home-slider s-block--full-bg">
  <salla-slider auto-play pagination type="fullwidth">
    <div slot="items">
      {% for banner in component.slider1 %}
      <div
        class="swiper-slide swiper-lazy-wrap relative home-slide js-home-slide"
      >
        <img
          src="{{ banner.image }}"
          alt=""
          class="w-full h-auto object-contain home-slide__img"
          loading="lazy"
        />

        <div
          class="absolute inset-0 container flex items-center justify-end px-8 py-16 lg:px-12 lg:py-20 home-slider__content"
        >
          <div class="w-1/2 sm:w-2/3 lg:w-1/3 text-right home-slide__text">
            <p
              class="home-slide__sub"
              data-swiper-parallax="-700"
              style="color:{{ banner.subcolor }};"
            >
              {{ banner.subtitl }}
            </p>

            <h3
              class="home-slide__title"
              data-swiper-parallax="-300"
              style="color:{{ banner.maintextcolor }};"
            >
              {{ banner.title }}
            </h3>

            <p
              class="home-slide__body"
              data-swiper-parallax="-700"
              style="color:{{ banner.textcolor }};"
            >
              {{ banner.text }}
            </p>

            {% if banner.link %}
            <a
              href="{{ banner.link }}"
              class="home-slide__btn inline-flex items-center justify-center mt-6 px-6 py-3 no-underline ms-auto"
              style="background:{{
                banner.backbutton
              }};border-radius:8px;border:1px solid rgba(255,255,255,0.15);color:{{
                banner.buttoncolor
              }};"
            >
              {{ banner.buttontext }}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </salla-slider>
</section>

{% block styleslider %}
<style>
  .home-slide {
    min-height: 628px;
    height: var(--home-slide-h, auto);
  }

  @media (min-width: 1024px) {
    .home-slide {
      min-height: 750px;
    }
  }

  .home-slide__img {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  @media (max-width: 639px) {
    .home-slider__content > .home-slide__text {
      width: 50% !important;
      text-align: right !important;
    }
  }
</style>
{% endblock %} {% block scriptslider %}
<script>
  (function () {
    function setMaxSlideHeight() {
      const slides = document.querySelectorAll(".js-home-slide");
      if (!slides.length) return;

      let maxH = 0;

      slides.forEach((slide) => {
        const img = slide.querySelector(".home-slide__img");
        if (!img) return;

        const h = img.getBoundingClientRect().height;
        if (h > maxH) maxH = h;
      });

      if (maxH > 0) {
        slides.forEach((slide) => {
          slide.style.setProperty("--home-slide-h", maxH + "px");
        });
      }
    }

    window.addEventListener("load", () => {
      setMaxSlideHeight();
      setTimeout(setMaxSlideHeight, 300);
      setTimeout(setMaxSlideHeight, 900);
    });

    window.addEventListener("resize", () => {
      document
        .querySelectorAll(".js-home-slide")
        .forEach((s) => s.style.removeProperty("--home-slide-h"));
      setMaxSlideHeight();
    });
  })();
</script>
{% endblock %}
