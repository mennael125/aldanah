<section class="s-block s-block--default home-slider s-block--full-bg">
  <salla-slider auto-play pagination type="fullwidth">
    <div slot="items">
      {% for banner in component.slider1 %}
      <div
        class="swiper-slide swiper-lazy-wrap relative home-slide js-home-slide"
      >
        <img
          src="{{ banner.image }}"
          alt=""
          class="w-full object-contain home-slide__img"
          loading="lazy"
        />

        <div
          class="absolute inset-0 container flex items-center justify-end px-8 py-16 lg:px-12 lg:py-20 home-slider__content"
        >
          <div class="w-1/2 sm:w-2/3 lg:w-1/3 home-slide__text">
            <p class="home-slide__sub" style="color:{{ banner.subcolor }};">
              {{ banner.subtitl }}
            </p>

            <h3
              class="home-slide__title"
              style="color:{{ banner.maintextcolor }};"
            >
              {{ banner.title }}
            </h3>

            <p class="home-slide__body" style="color:{{ banner.textcolor }};">
              {{ banner.text }}
            </p>

            {% if banner.link %}
            <a
              href="{{ banner.link }}"
              class="home-slide__btn inline-flex items-center justify-center mt-6 px-6 py-3 no-underline"
              style="background:{{
                banner.backbutton
              }};border-radius:8px;border:1px solid rgba(255,255,255,0.15);color:{{
                banner.buttoncolor
              }};"
            >
              {{ banner.buttontext }}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </salla-slider>
</section>

{% block styleslider %}
<style>
  .home-slide {
    min-height: 628px;
  }

  @media (min-width: 1024px) {
    .home-slide {
      min-height: 750px;
    }
  }

  .home-slide__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .home-slider__content,
  .home-slide__text {
    direction: rtl;
    text-align: right;
  }

  .home-slide__btn {
    margin-left: 0 !important;
    margin-right: auto !important;
  }

  @media (max-width: 639px) {
    .home-slider__content > .home-slide__text {
      width: 50% !important;
      text-align: right !important;
      direction: rtl !important;
    }

    .home-slide__btn {
      padding: 8px 14px !important;
      font-size: 14px !important;
      margin-top: 12px !important;
    }
  }

  .home-slider .swiper-button-next,
  .home-slider .swiper-button-prev,
  .home-slider [class*="swiper-button-"] {
    display: none !important;
  }

  .home-slider .swiper-pagination {
    display: flex !important;
    align-items: center;
    justify-content: center;
    gap: 10px;
    bottom: 18px !important;
    pointer-events: auto !important;
    z-index: 60 !important;
  }

  .home-slider .swiper-pagination-bullet {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    opacity: 1 !important;
    background: rgba(255, 255, 255, 0.35) !important;
    margin: 0 !important;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .home-slider .swiper-pagination-bullet-active {
    width: 26px;
    height: 10px;
    border-radius: 999px;
    background: #ffffff !important;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.25);
  }

  .home-slider .swiper-pagination-progressbar {
    display: none !important;
  }

  .home-slider__content {
    pointer-events: none;
  }
  .home-slide__text,
  .home-slide__btn {
    pointer-events: auto;
  }
</style>
{% endblock %} {% block scriptslider %}
<script>
  (function () {
    function disableWeirdTextAnimation() {
      document
        .querySelectorAll(".home-slider [data-swiper-parallax]")
        .forEach((el) => el.removeAttribute("data-swiper-parallax"));
    }

    window.addEventListener("load", () => {
      disableWeirdTextAnimation();
    });
  })();
</script>
{% endblock %}
