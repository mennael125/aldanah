<section
  class="s-block s-block--default home-slider s-block--full-bg"
  dir="rtl"
>
  <salla-slider
    auto-play
    pagination
    type="fullwidth"
    class="home-slider__salla"
    dir="rtl"
  >
    <div slot="items">
      {% for banner in component.slider1 %}
      <div
        class="swiper-slide swiper-lazy-wrap relative home-slide js-home-slide"
      >
        <img
          src="{{ banner.image }}"
          alt=""
          class="w-full home-slide__img"
          loading="lazy"
          draggable="false"
        />

        <div
          class="absolute inset-0 container flex items-center justify-start px-8 py-16 lg:px-12 lg:py-20 home-slider__content"
        >
          <div class="w-1/2 sm:w-2/3 lg:w-1/3 home-slide__text">
            <p class="home-slide__sub" style="color:{{ banner.subcolor }};">
              {{ banner.subtitl }}
            </p>

            <h3
              class="home-slide__title"
              style="color:{{ banner.maintextcolor }};"
            >
              {{ banner.title }}
            </h3>

            <p class="home-slide__body" style="color:{{ banner.textcolor }};">
              {{ banner.text }}
            </p>

            {% if banner.link %}
            <a
              href="{{ banner.link }}"
              class="home-slide__btn inline-flex items-center justify-center mt-6 px-6 py-3 no-underline"
              style="background:{{
                banner.backbutton
              }};border-radius:8px;border:1px solid rgba(255,255,255,0.15);color:{{
                banner.buttoncolor
              }};"
            >
              {{ banner.buttontext }}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </salla-slider>
</section>

{% block styleslider %}
<style>
  /* ==== أساسيات السلايد ==== */
  .home-slide {
    min-height: 628px;
    height: var(--home-slide-h, auto);
    user-select: none;
    -webkit-user-select: none;
    cursor: grab;
  }
  .home-slide:active {
    cursor: grabbing;
  }

  @media (min-width: 1024px) {
    .home-slide {
      min-height: 750px;
    }
  }

  .home-slide__img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* خليه cover ثابت */
    pointer-events: none; /* يمنع لخبطة سحب الماوس على الصورة */
  }

  /* خلي الـ Swiper نفسه RTL عشان السحب يبقى طبيعي */
  .home-slider,
  .home-slider .swiper,
  .home-slider .swiper-wrapper {
    direction: rtl !important;
  }

  .home-slider__content,
  .home-slide__text {
    direction: rtl;
    text-align: right;
  }

  .home-slider__content {
    pointer-events: none;
  }
  .home-slide__text,
  .home-slide__btn {
    pointer-events: auto;
  }

  .home-slide__btn {
    margin-left: 0 !important;
    margin-right: auto !important;
  }

  @media (max-width: 639px) {
    .home-slider__content > .home-slide__text {
      width: 50% !important;
      text-align: right !important;
      direction: rtl !important;
    }
    .home-slide__btn {
      padding: 8px 14px !important;
      font-size: 14px !important;
      margin-top: 12px !important;
    }
  }

  /* اخفاء الاسهم (زي ما انت عايز) */
  .home-slider .swiper-button-next,
  .home-slider .swiper-button-prev,
  .home-slider [class*="swiper-button-"] {
    display: none !important;
  }

  /* ==== Pagination (Bullets) ==== */
  .home-slider .swiper-pagination {
    display: flex !important;
    align-items: center;
    justify-content: flex-end !important;
    gap: 10px;
    bottom: 18px !important;
    left: auto !important;
    right: 24px !important;
    width: auto !important;
    z-index: 60 !important;
    pointer-events: auto !important;
  }

  .home-slider .swiper-pagination-bullet {
    width: 10px !important;
    height: 10px !important;
    border-radius: 999px !important;
    opacity: 1 !important;
    background: rgba(255, 255, 255, 0.35) !important;
    transition: all 0.2s ease;
    cursor: pointer;
    margin: 0 !important;
  }

  .home-slider .swiper-pagination-bullet-active {
    width: 26px !important;
    height: 10px !important;
    border-radius: 999px !important;
    background: #ffffff !important;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.25);
  }

  /* مهم: ما نخبيش progressbar هنا عشان لو اتولد بالغلط،
     والـ JS تحت هيحوّله Bullets أصلاً */
  .home-slider .swiper-pagination-progressbar {
    height: 6px !important;
    border-radius: 999px !important;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.25) !important;
  }
  .home-slider .swiper-pagination-progressbar-fill {
    background: #fff !important;
  }

  @media (max-width: 639px) {
    .home-slider .swiper-pagination {
      right: 16px !important;
      bottom: 12px !important;
      gap: 8px;
    }
  }
</style>
{% endblock %} {% block scriptslider %}
<script>
  (function () {
    function setMinHeightOnly() {
      document.querySelectorAll(".js-home-slide").forEach((slide) => {
        slide.style.removeProperty("--home-slide-h");
      });
    }

    function disableParallax() {
      document
        .querySelectorAll(".home-slider [data-swiper-parallax]")
        .forEach((el) => el.removeAttribute("data-swiper-parallax"));
    }

    // يحاول يمسك Swiper instance من سلايدر سلة
    function getSwiperInstance(el) {
      if (!el) return null;
      return el.swiper || el._swiper || el.slider?.swiper || null;
    }

    function forceRtlAndBullets() {
      const sallaEl = document.querySelector(".home-slider salla-slider");
      const swiper = getSwiperInstance(sallaEl);
      if (!swiper) return false;

      // RTL صحيح للسحب
      try {
        if (typeof swiper.changeLanguageDirection === "function") {
          swiper.changeLanguageDirection("rtl");
        }
      } catch (e) {}

      // تحسين سحب الماوس (لو مسموح)
      try {
        swiper.params.grabCursor = true;
        swiper.params.simulateTouch = true;
        swiper.params.allowTouchMove = true;
        swiper.params.threshold = 5;
      } catch (e) {}

      // اجبار الـ pagination تبقى bullets (بدل progressbar اللي كان بيختفي)
      try {
        if (swiper.params.pagination) {
          swiper.params.pagination.type = "bullets";
          swiper.params.pagination.clickable = true;

          // إعادة تهيئة الـ pagination
          if (swiper.pagination) {
            swiper.pagination.destroy();
            swiper.pagination.init();
            swiper.pagination.render();
            swiper.pagination.update();
          }
        }
      } catch (e) {}

      // تحديث نهائي
      try {
        swiper.update();
      } catch (e) {}

      return true;
    }

    window.addEventListener("load", () => {
      setMinHeightOnly();
      disableParallax();
      setTimeout(disableParallax, 300);

      // لأن سلة أحيانًا بتبني السويبر بعد load بشوية
      let tries = 0;
      const t = setInterval(() => {
        tries++;
        const ok = forceRtlAndBullets();
        if (ok || tries >= 20) clearInterval(t);
      }, 200);
    });

    window.addEventListener("resize", () => {
      setMinHeightOnly();
    });
  })();
</script>
{% endblock %}
