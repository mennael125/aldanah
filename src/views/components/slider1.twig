<section
  class="s-block s-block--default home-slider s-block--full-bg"
  dir="rtl"
>
  <salla-slider
    id="home-main-slider"
    auto-play
    pagination
    type="fullwidth"
    class="home-slider__salla"
    dir="rtl"
    show-controls="false"
  >
    <div slot="items">
      {% for banner in component.slider1 %}
      <div class="swiper-slide relative home-slide">
        <img
          src="{{ banner.image }}"
          alt=""
          class="home-slide__img"
          loading="lazy"
          draggable="false"
        />

        <div class="home-slider__content absolute inset-0 flex items-center">
          <div class="home-slide__text">
            <p class="home-slide__sub" style="color:{{ banner.subcolor }};">
              {{ banner.subtitl }}
            </p>

            <h3
              class="home-slide__title"
              style="color:{{ banner.maintextcolor }};"
            >
              {{ banner.title }}
            </h3>

            <p class="home-slide__body" style="color:{{ banner.textcolor }};">
              {{ banner.text }}
            </p>

            {% if banner.link %}
            <a
              href="{{ banner.link }}"
              class="home-slide__btn inline-flex items-center justify-center mt-6 px-6 py-3 no-underline"
              style="background:{{
                banner.backbutton
              }};border-radius:8px;border:1px solid rgba(255,255,255,0.15);color:{{
                banner.buttoncolor
              }};"
            >
              {{ banner.buttontext }}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </salla-slider>
</section>

{% block styleslider %}
<style>
  .home-slider {
    position: relative;
    overflow: hidden;
  }

  .home-slide {
    position: relative;
    min-height: 628px;
  }
  @media (min-width: 1024px) {
    .home-slide {
      min-height: 750px;
    }
  }

  .home-slide__img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }

  .home-slider,
  .home-slider .swiper,
  .home-slider .swiper-wrapper {
    direction: rtl;
  }

  .home-slider__content {
    width: 100%;
    padding-right: 53px;
    padding-left: 0;
    box-sizing: border-box;
  }

  .home-slide__text {
    max-width: 420px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    justify-content: flex-start;
    align-items: flex-start;
  }

  .home-slider #home-main-slider .swiper-pagination {
    position: absolute;
    right: 53px;
    left: auto;
    bottom: 18px;
    display: flex;
    align-items: center;
    gap: 10px;
    z-index: 20;
  }

  .home-slider #home-main-slider .swiper-pagination-bullet {
    width: 12px;
    height: 12px;
    border-radius: 999px;
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.95);
    opacity: 1;
    transition: all 0.2s ease;
  }

  .home-slider #home-main-slider .swiper-pagination-bullet-active {
    width: 64px;
    height: 12px;
    border-radius: 999px;
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.95);
  }

  @media (max-width: 639px) {
    .home-slider__content {
      padding-right: 16px;
      padding-left: 16px;
    }
    .home-slide__text {
      max-width: 100%;
    }

    .home-slide__btn {
      padding: 8px 14px;
      font-size: 14px;
      margin-top: 12px;
    }

    .home-slider #home-main-slider .swiper-pagination {
      right: 16px;
      bottom: 12px;
      gap: 8px;
    }
  }

  .home-slider .swiper-button-next,
  .home-slider .swiper-button-prev {
    display: none !important;
  }

  p.home-slide__sub,
  p.home-slide__body {
    font-weight: 400;
    font-size: 16px;
    line-height: 1;
    letter-spacing: 0;
    text-align: right;
    vertical-align: middle;
  }

  h3.home-slide__title {
    font-weight: 400;
    font-size: 30px;
    line-height: 1;
    letter-spacing: -2px;
    text-align: center;
    vertical-align: middle;
  }

  .home-slide__btn {
    width: 203px;
    height: 48px;
    justify-content: center;
    opacity: 1;
    padding: 6px 60px;
    border-radius: 2px;
    font-weight: 400;
    font-size: 16px;
    line-height: 1;
    letter-spacing: 0;
    text-align: center;
    vertical-align: middle;
  }
</style>
{% endblock %} {% block scriptslider %}{% endblock %}
