<section
  class="s-block s-block--features"
  style="background: {{ component.containercolor|default('#004956') }};"
>
  <h3 class="feature-heading text-center">
    {{ component.titlefeature22 }}
  </h3>

  <div
    class="s-block--features__grid grid grid-cols-1 md:grid-cols-3 gap-[22px] justify-items-center"
  >
    {% for item in component.featbox %}
    <div
      class="s-block--features__item flex flex-col items-center text-center"
      style="background: {{ component.boxcolor|default('#ffffff') }};"
    >
      <div class="feature-image mb-[28px]">
        <img src="{{ item.image }}" alt="" loading="lazy" />
      </div>

      <h2
        class="feature-title"
        style="color: {{ component.text_color|default('#004956') }};"
      >
        {{ item.maintext22 }}
      </h2>

      <p class="feature-subtitle">
        {{ item.subtext22 }}
      </p>
    </div>
    {% endfor %}
  </div>
</section>

{% block styles %}
<style>
  .s-block--features {
    padding: 60px 71px;
    text-align: center;
  }

  .feature-heading {
    font-weight: 600;
    font-size: 36px;
    line-height: 1;
    text-align: center;
    margin: 0 0 46px 0;
  }

  .s-block--features__grid {
    justify-items: center;
  }

  .s-block--features__item {
    min-height: 259px;
    max-width: 418px;
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 44px 24px;
    gap: 16px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-sizing: border-box;
  }

  .feature-image {
    margin-bottom: 8px;
  }

  .feature-image img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    display: block;
  }

  .feature-title,
  .feature-subtitle {
    max-width: 100%;
    overflow-wrap: anywhere;
    word-break: break-word;
    white-space: normal;
  }

  .feature-title {
    font-weight: 500;
    font-size: 24px;
    line-height: 1;
    margin: 0 0 16px 0;
    text-align: center;
  }

  .feature-subtitle {
    font-weight: 500;
    font-size: 16px;
    line-height: 1;
    margin: 0;
    text-align: center;
  }

  .s-block--features__item h2 {
    font-weight: 500;
    font-size: 24px;
    line-height: 1;
    letter-spacing: 0;
    text-align: right;
  }

  .s-block--features__item p {
    font-weight: 500;
    font-size: 16px;
    line-height: 1;
    letter-spacing: 0;
    text-align: center;
    vertical-align: middle;
  }

  @media (max-width: 992px) {
    .feature-heading {
      font-size: 24px;
    }
  }

  @media (max-width: 992px) {
    .s-block--features {
      padding: 36px 16px;
    }
    .s-block--features__item {
      grid-column: span 2 / span 2;
    }
    .s-block--features__item h2 {
      font-size: 20px;
    }
  }

  @media (min-width: 992px) {
    .s-block--features__grid {
      max-width: 1298px;
      margin: auto;
    }
  }
  .s-block--features__item h2 {
    text-align: center;
  }
</style>
{% endblock %}
