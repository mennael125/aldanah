<section
  class="s-block s-block--features features-fullwidth"
  style="background: {{ containercolor }};"
>
  <div class="features-inner">
    <div class="features-grid">
      {% for item in featbox %}
      <div class="feature-box" style="background: {{ boxcolor }};">
        {% if item.image %}
        <div class="feature-icon">
          <img
            src="{{ item.image.url }}"
            alt="{{ item.maintext22 }}"
            class="feature-icon__img"
            loading="lazy"
          />
        </div>
        {% endif %}

        <h3 class="feature-title" style="color: {{ text_color }} !important;">
          {{ item.maintext22 }}
        </h3>

        <p
          class="feature-subtitle"
          style="color: {{ text_color }} !important; opacity: 1 !important;"
        >
          {{ item.subtext22 }}
        </p>
      </div>
    </div>
  </div>
</section>
