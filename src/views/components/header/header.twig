<header class="store-header">
  {# Main Nav #}
  <div
    id="mainnav"
    class="main-nav-container shadow-default bg-white flex items-center"
  >
    <div class="inner bg-inherit w-full">
      <div class="container">
        {# 3 أعمدة: أيقونات (شمال) - لوجو (منتصف) - منيو (يمين) #}
        <div class="flex items-center justify-between relative">
          {# icons - الشمال #}
          <div class="flex items-center my-2.5">
            <div class="flex items-center text-xs gap-4">
              {# زر وضع الليل/النهار (صورة) #}
              <button
                class="header-btn flex items-center bg-transparent border-0 p-0"
                type="button"
                aria-label="toggle-theme"
                onclick="salla.event.dispatch('appearance::toggle')"
              >
                <img
                  src="../../../assets/icons/light.svg"
                  alt="تغيير الوضع"
                  class="w-4 h-4"
                />
              </button>

              {# زر اللغة / الدولة (صورة + نص) - نفس event التوب ناف #}
              <button
                class="header-btn flex items-center bg-transparent border-0 p-0"
                type="button"
                aria-label="localization"
                onclick="salla.event.dispatch('localization::open')"
              >
                <span class="ml-1 rtl:ml-0 rtl:mr-1">اللغة</span>
                <img
                  src="../../../assets/icons/language (2).svg"
                  alt="اللغة"
                  class="w-4 h-4"
                />
              </button>

              {# زر البحث #}
              <button
                class="header-btn flex items-center bg-transparent border-0 p-0"
                type="button"
                aria-label="search"
                onclick="salla.event.dispatch('search::toggle')"
              >
                <span class="ml-1 rtl:ml-0 rtl:mr-1">بحث</span>
                <img
                  src="../../../assets/icons/search.svg"
                  alt="بحث"
                  class="w-4 h-4"
                />
              </button>

              {# المستخدم (قائمة أو زر تسجيل الدخول) #} {% if user.type ==
              'user' %}
              <salla-user-menu avatar-only show-header></salla-user-menu>
              {% else %}
              <button
                class="header-btn flex items-center bg-transparent border-0 p-0"
                aria-label="user-icon"
                type="button"
                onclick="salla.event.dispatch('login::open')"
              >
                <span class="ml-1 rtl:ml-0 rtl:mr-1">الحساب</span>
                <img
                  src="../../../assets/icons/user.svg"
                  alt="الحساب"
                  class="w-4 h-4"
                />
              </button>
              {% endif %} {# ملخص السلة #}
              <salla-cart-summary class="flex items-center">
                <img
                  slot="icon"
                  src="../../../assets/icons/cart.svg"
                  alt="السلة"
                  class="w-4 h-4"
                />
                <span slot="title" class="ml-1 rtl:ml-0 rtl:mr-1">السلة</span>
              </salla-cart-summary>
            </div>
          </div>

          {# logo - في النص #}
          <div class="flex items-center justify-center flex-1">
            <a class="navbar-brand" href="{{ store.url }}">
              <img
                fetchpriority="high"
                width="100%"
                height="100%"
                loading="eager"
                src="{{ store.logo }}"
                alt="{{ store.name }} logo"
              />
              {% if is_page('index') %}
              <h1 class="sr-only">{{ store.name }}</h1>
              {% else %}
              <h2 class="sr-only">{{ store.name }}</h2>
              {% endif %}
            </a>
          </div>

          {# menu - في اليمين #}
          <div class="flex items-center">
            {# زر منيو الموبايل #}
            <a
              class="lg:hidden mburger mburger--collapse leading-none rtl:ml-4 ltr:mr-4"
              href="#mobile-menu"
              aria-label="Open-menu"
            >
              <i class="sicon-menu text-primary text-2xl"></i>
            </a>

            {# منيو الديسكتوب #}
            <custom-main-menu></custom-main-menu>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

{# مودال اللغة لازم يكون موجود عشان event localization::open يشتغل #} {% if
store.settings.is_multilingual or store.settings.currencies_enabled %}
<salla-localization-modal></salla-localization-modal>
{% endif %} {% if store.scope %}
<salla-scopes
  selection="{{ store.scope.display_as == 'popup' ? 'mandatory' : 'optional' }}"
></salla-scopes>
{% endif %}
