<section class="s-block s-block--counter" dir="rtl">
  {% set target = (section.settings.counterdate ?? component.counterdate ?? '')
  | default('') | trim %} {% set mainText = (section.settings.maintextcount ??
  component.maintextcount ?? '') | default('') | trim %} {% set subText =
  (section.settings.subtextcount ?? component.subtextcount ?? '') | default('')
  | trim %} {% set imgSrc = (section.settings.imagecount ?? component.imagecount
  ?? '') | default('') | trim %}

  <div class="counter-wrap" data-countdown="{{ target }}">
    <div class="counter-left">
      <div class="counter-cells">
        <div class="cell">
          <div class="num js-days">00</div>
          <div class="lbl">أيام</div>
        </div>
        <div class="cell">
          <div class="num js-hours">00</div>
          <div class="lbl">ساعات</div>
        </div>
        <div class="cell">
          <div class="num js-mins">00</div>
          <div class="lbl">دقائق</div>
        </div>
        <div class="cell">
          <div class="num js-secs">00</div>
          <div class="lbl">ثواني</div>
        </div>
      </div>

      {% if mainText %}
      <h3 class="counter-title">{{ mainText }}</h3>
      {% endif %} {% if subText %}
      <p class="counter-sub">{{ subText }}</p>
      {% endif %}

      <div class="counter-msg" hidden></div>

      {% set buttonUrl = section.settings.buttonurl1 ??
      attribute(section.settings,'buttonurl1') ??
      section.settings.get('buttonurl1') ?? component.buttonurl1 ??
      attribute(component,'buttonurl1') ?? component.get('buttonurl1') ?? '' %}
      {% set buttonText = section.settings.buttonname ??
      attribute(section.settings,'buttonname') ??
      section.settings.get('buttonname') ?? component.buttonname ??
      attribute(component,'buttonname') ?? component.get('buttonname') ?? '' %}
      {% set btnBg = section.settings.backbutton ??
      attribute(section.settings,'backbutton') ??
      section.settings.get('backbutton') ?? component.backbutton ??
      attribute(component,'backbutton') ?? component.get('backbutton') ?? '' %}
      {% set btnColor = section.settings.buttoncolor ??
      attribute(section.settings,'buttoncolor') ??
      section.settings.get('buttoncolor') ?? component.buttoncolor ??
      attribute(component,'buttoncolor') ?? component.get('buttoncolor') ?? ''
      %} {% set buttonUrl = buttonUrl|default('')|trim %} {% set buttonText =
      buttonText|default('')|trim %} {% set btnBg =
      btnBg|default('#004956')|trim %} {% set btnColor =
      btnColor|default('#ffffff')|trim %} {% if buttonUrl and buttonText %}
      <a
        href="{{ buttonUrl }}"
        class="counter-btn"
        style="background:{{
          btnBg
        }};border-radius:8px;border:1px solid rgba(255,255,255,0.15);color:{{
          btnColor
        }};"
      >
        {{ buttonText }}
      </a>
      {% endif %}
    </div>

    <div class="counter-right">
      {% if imgSrc %}
      <img class="counter-image" src="{{ imgSrc }}" alt="" loading="lazy" />
      {% endif %}
    </div>
  </div>
</section>

{% block stylecounter %}
<style>
  .s-block--counter {
    padding: 40px 0;
  }
  .s-block--counter .counter-wrap {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: row-reverse;
    overflow: hidden;
  }
  .s-block--counter .counter-right {
    width: 423px;
    flex: 0 0 423px;
  }
  .s-block--counter .counter-image {
    width: 100%;
    height: 100%;
    min-height: 483px;
    object-fit: cover;
    display: block;
  }
  .s-block--counter .counter-left {
    flex: 1 1 auto;
    padding: 48px 56px;
    display: flex;
    gap: 24px;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }
  .s-block--counter .counter-cells {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 16px;
    justify-items: center;
    margin-bottom: 36px;
    width: fit-content;
  }
  .s-block--counter .cell {
    width: 112px;
    height: 132px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 15px;
    display: grid;
    place-items: center;
    padding: 24px;
    box-sizing: border-box;
  }
  .s-block--counter .cell .num {
    font-family: Cairo, sans-serif;
    font-weight: 700;
    font-size: 36px;
    line-height: 1.2;
    text-align: center;
  }
  .s-block--counter .cell .lbl {
    font-family: Cairo, sans-serif;
    font-weight: 300;
    font-size: 20px;
    line-height: 1.2;
    opacity: 0.85;
    margin-top: 8px;
    text-align: center;
  }
  .s-block--counter .counter-title {
    font-family: Cairo, sans-serif;
    font-weight: 700;
    font-size: 36px;
    line-height: 1.5;
    margin: 0;
    text-align: right;
  }
  .s-block--counter .counter-sub {
    font-family: Cairo, sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
    opacity: 0.9;
    text-align: right;
  }
  .s-block--counter .counter-msg {
    margin-top: 14px;
    font-family: Cairo, sans-serif;
    font-size: 13px;
    opacity: 0.8;
    text-align: right;
  }
  @media (max-width: 992px) {
    .s-block--counter .counter-title {
      font-size: 24px;
      text-align: center;
    }
    .s-block--counter .counter-sub,
    .s-block--counter .counter-msg {
      text-align: center;
    }
    .s-block--counter .cell {
      width: 67px;
      height: 80px;
      padding: 14px;
    }
    .s-block--counter .cell .num {
      font-size: 24px;
    }
    .s-block--counter .cell .lbl {
      font-size: 16px;
    }
  }
  @media (max-width: 767px) {
    .s-block--counter .counter-cells {
      padding: 16px;
      margin-inline: auto;
    }
    .s-block--counter .counter-wrap {
      flex-direction: column-reverse;
    }
    .s-block--counter .counter-right {
      width: 100%;
      flex: 0 0 auto;
    }
    .s-block--counter .counter-image {
      min-width: 343px;
      min-height: 391px;
    }
    .s-block--counter .counter-left {
      padding: 28px 16px;
    }
    .s-block--counter .counter-wrap {
      flex-direction: column-reverse;
      padding: 16px;
    }
  }
  .counter-btn {
    width: 203px;
    min-height: 48px;
    height: auto;

    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;

    padding: 6px 12px;
    border-radius: 2px;
    box-sizing: border-box;

    font-weight: 400;
    font-size: 16px;
    line-height: 1.2;
    letter-spacing: 0;

    white-space: normal;
    overflow-wrap: anywhere;
    word-break: break-word;
  }
</style>
{% endblock %} {% block scriptcounter %}
<script>
  (function () {
    function pad2(n) {
      return String(n).padStart(2, "0");
    }
    function normalizeDateString(s) {
      if (!s) return "";
      var str = String(s).trim();
      if (/^\d{4}-\d{2}-\d{2}\s+\d{2}:\d{2}(:\d{2})?$/.test(str)) {
        str = str.replace(/\s+/, "T");
      }
      return str;
    }
    function initCountdown(wrap) {
      var targetStr = normalizeDateString(wrap.getAttribute("data-countdown"));
      var msg = wrap.querySelector(".counter-msg");
      var dEl = wrap.querySelector(".js-days");
      var hEl = wrap.querySelector(".js-hours");
      var mEl = wrap.querySelector(".js-mins");
      var sEl = wrap.querySelector(".js-secs");
      function showMsg(t) {
        if (!msg) return;
        msg.hidden = !t;
        msg.textContent = t || "";
      }
      if (!targetStr) {
        showMsg("تنبيه: تاريخ ووقت العدّ التنازلي غير متوفر");
        return;
      }
      var target = new Date(targetStr);
      if (isNaN(target.getTime())) {
        showMsg("تنبيه: صيغة التاريخ غير صحيحة");
        return;
      }
      function tick() {
        var now = new Date();
        var diffMs = target.getTime() - now.getTime();
        if (diffMs <= 0) {
          dEl.textContent = "00";
          hEl.textContent = "00";
          mEl.textContent = "00";
          sEl.textContent = "00";
          showMsg("انتهت المدة");
          clearInterval(timer);
          return;
        }
        var totalSeconds = Math.floor(diffMs / 1000);
        var days = Math.floor(totalSeconds / 86400);
        var rem = totalSeconds % 86400;
        var hours = Math.floor(rem / 3600);
        rem %= 3600;
        var mins = Math.floor(rem / 60);
        var secs = rem % 60;
        dEl.textContent = String(days);
        hEl.textContent = pad2(hours);
        mEl.textContent = pad2(mins);
        sEl.textContent = pad2(secs);
        showMsg("");
      }
      tick();
      var timer = setInterval(tick, 1000);
    }
    document.addEventListener("DOMContentLoaded", function () {
      document
        .querySelectorAll(".s-block--counter .counter-wrap[data-countdown]")
        .forEach(initCountdown);
    });
  })();
</script>
{% endblock %}
