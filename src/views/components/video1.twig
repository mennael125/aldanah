<section class="s-block s-block--video mt-16 video-fullwidth">
  <div class="container video-fullwidth__container">
    <div class="videoWrapper">
      <video
        class="bg-video"
        playsinline
        muted
        loop
        preload="auto"
        poster="{{ component.vidimage }}"
        crossorigin="anonymous"
        controlsList="nodownload noplaybackrate"
      >
        <source src="{{ component.urlvid }}" type="video/mp4" />
      </video>

      <button type="button" class="video-toggle" aria-label="تشغيل الفيديو">
        <span class="icon icon-play" aria-hidden="true"></span>
      </button>

      <div class="video-msg" hidden></div>
    </div>
  </div>
</section>

{% block stylevideo %}
<style>
  .video-fullwidth {
    width: 100vw;
    max-width: 100%;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
  }

  .video-fullwidth__container {
    max-width: none !important;
    width: 100% !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  .videoWrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: #000;
    aspect-ratio: 16/9;
    border-radius: 0;
  }

  .bg-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .video-toggle {
    position: absolute;
    inset: 0;
    margin: auto;
    width: 74px;
    height: 74px;
    border-radius: 999px;
    border: 0;
    background: rgba(0, 0, 0, 0.45);
    display: grid;
    place-items: center;
    cursor: pointer;
    z-index: 2;
    backdrop-filter: blur(2px);
  }

  .video-toggle:hover {
    background: rgba(0, 0, 0, 0.55);
  }

  .icon-play {
    width: 0;
    height: 0;
    border-top: 12px solid transparent;
    border-bottom: 12px solid transparent;
    border-left: 18px solid #fff;
    margin-left: 3px;
  }

  .icon-pause {
    width: 18px;
    height: 18px;
    position: relative;
  }

  .icon-pause::before,
  .icon-pause::after {
    content: "";
    position: absolute;
    top: 0;
    width: 6px;
    height: 18px;
    background: #fff;
    border-radius: 2px;
  }

  .icon-pause::before {
    left: 0;
  }

  .icon-pause::after {
    right: 0;
  }

  .videoWrapper.is-playing .video-toggle {
    opacity: 0.9;
  }

  .video-msg {
    position: absolute;
    inset: auto 12px 12px 12px;
    z-index: 3;
    padding: 10px 12px;
    border-radius: 10px;
    background: rgba(0, 0, 0, 0.55);
    color: #fff;
    font-size: 13px;
    direction: rtl;
    text-align: right;
  }
</style>
{% endblock %} {% block scriptvideo %}
<script>
  (function () {
    function initVideoBlock(wrapper) {
      const video = wrapper.querySelector(".bg-video");
      const btn = wrapper.querySelector(".video-toggle");
      const msg = wrapper.querySelector(".video-msg");
      if (!video || !btn) return;

      function showMsg(text) {
        if (!msg) return;
        msg.hidden = !text;
        msg.textContent = text || "";
      }

      function toggleIcon(isPlaying) {
        const icon = btn.querySelector(".icon");
        if (!icon) return;
        icon.className = "icon " + (isPlaying ? "icon-pause" : "icon-play");
      }

      function setState(isPlaying) {
        toggleIcon(isPlaying);
        wrapper.classList.toggle("is-playing", isPlaying);
        btn.setAttribute(
          "aria-label",
          isPlaying ? "إيقاف تشغيل الفيديو" : "تشغيل الفيديو"
        );
      }

      video.muted = true;
      video.setAttribute("muted", "");
      video.setAttribute("playsinline", "");
      video.playsInline = true;

      setState(false);
      showMsg("");

      async function tryPlay() {
        showMsg("");
        try {
          if (video.readyState === 0) video.load();
          video.muted = true;

          const p = video.play();
          if (p && typeof p.then === "function") await p;

          video.removeAttribute("poster");
          setState(true);
        } catch (e) {
          setState(false);
          showMsg(
            "تعذّر تشغيل الفيديو. يُرجى التحقق من صلاحية الرابط وإعدادات الاستضافة."
          );
          console.log("Video play blocked/error:", e);
        }
      }

      btn.addEventListener("click", () => {
        if (video.paused) tryPlay();
        else {
          video.pause();
          setState(false);
        }
      });

      video.addEventListener("play", () => {
        video.removeAttribute("poster");
        setState(true);
        showMsg("");
      });

      video.addEventListener("pause", () => setState(false));

      video.addEventListener("error", () => {
        const code = video.error ? video.error.code : "";
        setState(false);
        showMsg(
          "حدث خطأ أثناء تحميل الفيديو. يُرجى تجربة رابط مباشر آخر بصيغة MP4. (رمز الخطأ: " +
            code +
            ")"
        );
      });

      video.addEventListener("stalled", () => {
        showMsg("جاري محاولة استكمال التحميل…");
      });

      video.addEventListener("canplay", () => {
        if (!video.paused) showMsg("");
      });
    }

    window.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll(".videoWrapper").forEach(initVideoBlock);
    });
  })();
</script>
{% endblock %}
