<section class="s-block s-block--banners container">
  <h3>
    {{ catogery1.cato }}
  </h3>

  <div class="banners-grid">
    {% for index, banner in component.collectiongrid %}
    <a
      href="{{ banner.url }}"
      aria-label="{{ (banner.titlecat ? banner.titlecat : 'square-banner-' ~ index) | e('html_attr') }}"
      class="banner-card"
    >
      <span
        class="banner-image"
        style="background-image:url('{{ banner.imagecat }}');"
      ></span>

      {% if banner.titlecat or banner.des %}
      <div class="banner-text">
        {% if banner.titlecat %}
        <h3 class="banner-title" style="color:{{ banner.catcolor }};">
          {{ banner.titlecat }}
        </h3>
        {% endif %} {% if banner.des %}
        <p class="banner-desc" style="color:{{ banner.catcolor }};">
          {{ banner.des }}
        </p>
        {% endif %}
      </div>
      {% endif %}
    </a>
    {% endfor %}
  </div>
</section>

{% block stylecat %}
<style>
  .banners-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }

  @media (max-width: 768px) {
    .banners-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
  }

  .banner-card {
    position: relative;
    display: block;
    text-decoration: none;
  }

  .banner-image {
    display: block;
    width: 100%;
    aspect-ratio: 1/1;
    border-radius: 12px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
    position: relative;
  }

  .banner-image::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.55),
      rgba(0, 0, 0, 0) 60%
    );
    pointer-events: none;
  }

  /* Desktop/Tablet: النص فوق الصورة يمين تحت */
  .banner-text {
    position: absolute;
    right: 12px;
    left: 12px;
    bottom: 12px;
    z-index: 2;
    text-align: right;
    direction: rtl;
  }

  .banner-title {
    margin: 0 0 4px 0;
    font-weight: 800;
    font-size: 16px;
    line-height: 1.2;
  }

  .banner-desc {
    margin: 0;
    font-size: 13px;
    opacity: 0.95;
  }

  /* Mobile: النص تحت الصورة وفي النص */
  @media (max-width: 768px) {
    .banner-image::before {
      display: none;
    }

    .banner-text {
      position: static;
      margin-top: 24px;
      text-align: center;
      direction: rtl;
    }

    .banner-title,
    .banner-desc {
      text-align: center;
    }
  }
</style>
{% endblock %} {% block scriptcat %}{% endblock %}
