<section class="s-block s-block--reviews1" dir="rtl">
  {# Title #} {% set blockTitle = section.settings.title ??
  attribute(section.settings, 'title') ?? section.settings.get('title') ??
  component.title ?? attribute(component, 'title') ?? component.get('title') ??
  '' %} {% set blockTitle = blockTitle|default('')|trim %} {# Reviews list
  (supports repeater/value) #} {% set reviewsRaw = section.settings.review ??
  attribute(section.settings, 'review') ?? section.settings.get('review') ??
  component.review ?? attribute(component, 'review') ?? component.get('review')
  ?? [] %} {% set reviews = reviewsRaw.value is defined ? reviewsRaw.value :
  reviewsRaw %}

  <div class="container overflow-hidden">
    <div class="s-reviews-header-wrapper">
      <h2 class="s-reviews-header">{{ blockTitle ?: 'آراء العملاء' }}</h2>
    </div>

    {% if reviews and reviews|length %}
    <salla-slider
      id="reviews1-{{ position }}-slider"
      class="s-slider-wrapper reviews1-slider"
      auto-play
      centered
      loop
      slides-per-view="3"
      mobile-slides-per-view="1"
    >
      <div slot="items">
        {% for item in reviews %} {% set name = item['review.client'] ??
        attribute(item, 'review.client') ?? item.client ?? attribute(item,
        'client') ?? 'اسم العميل' %} {% set name = name|default('')|trim %} {%
        set text = item['review.reviewtext'] ?? attribute(item,
        'review.reviewtext') ?? item.reviewtext ?? attribute(item, 'reviewtext')
        ?? item.text ?? attribute(item, 'text') ?? '' %} {% set text =
        text|default('')|trim %} {% set rawStars = item['review.stars'] ??
        attribute(item, 'review.stars') ?? item.stars ?? attribute(item,
        'stars') ?? 0 %} {% set stars = rawStars|default(0) %} {% if stars > 5
        %}{% set stars = 5 %}{% endif %} {% if stars < 0 %}{% set stars = 0 %}{%
        endif %}

        <div class="swiper-slide">
          <article class="r1-card">
            <span class="r1-quote" aria-hidden="true">
              <img src="{{ 'images/vv.png' | asset }}" alt="" />
            </span>

            <h3 class="r1-name">{{ name }}</h3>

            <div class="r1-stars">
              <salla-rating-stars
                class="flex"
                size="small"
                value="{{ stars }}"
              ></salla-rating-stars>
            </div>

            <p class="r1-text">{{ text }}</p>
          </article>
        </div>
        {% endfor %}
      </div>
    </salla-slider>
    {% else %}
    <div class="r1-empty">
      لا يوجد بيانات لعرضها — تأكد من إضافة عناصر داخل (review).
    </div>
    {% endif %}
  </div>
</section>

{% block stylereviews1 %}
<style>
  .s-block--reviews1 {
    padding: 40px 0;
  }
  .s-block--reviews1 .s-reviews-header {
    text-align: center;
    font-size: 38px;
    font-weight: 800;
    margin: 0 0 30px;
    color: #111;
    font-family: Cairo, sans-serif;
  }

  /* slider */
  .s-block--reviews1 .reviews1-slider {
    padding: 10px 0 26px;
    overflow: visible !important;
  }
  .s-block--reviews1 .reviews1-slider .swiper,
  .s-block--reviews1 .reviews1-slider .swiper-wrapper {
    overflow: visible !important;
  }

  .s-block--reviews1 .reviews1-slider .swiper-slide {
    height: auto;
    display: flex;
    align-items: stretch;
    box-sizing: border-box;
    padding: 0 12px;
  }

  /* card */
  .s-block--reviews1 .r1-card {
    position: relative;
    width: 100%;
    background: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.05);
    padding: 22px 16px 16px;
    text-align: center;
    transition: transform 0.25s ease, box-shadow 0.25s ease,
      background 0.25s ease, opacity 0.25s ease, filter 0.25s ease;
  }
  .s-block--reviews1 .r1-quote {
    position: absolute;
    top: -10px;
    inset-inline-start: -10px;
    width: 36px;
    height: 36px;
    border-radius: 4px;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  .s-block--reviews1 .r1-quote img {
    width: 18px;
    height: 18px;
    display: block;
  }
  .s-block--reviews1 .r1-name {
    margin: 0 0 6px;
    font-size: 14px;
    font-weight: 700;
    color: #111;
    font-family: Cairo, sans-serif;
  }
  .s-block--reviews1 .r1-stars {
    margin-bottom: 10px;
    direction: ltr;
    display: flex;
    justify-content: center;
  }
  .s-block--reviews1 .r1-text {
    margin: 0;
    font-size: 13px;
    line-height: 1.85;
    color: #444;
    font-family: Cairo, sans-serif;
  }

  /* ✅ Always highlight active (current shown) */
  .s-block--reviews1 .swiper-slide-active .r1-card {
    background: #f6f6f6 !important;
    box-shadow: 0 14px 30px rgba(0, 0, 0, 0.08) !important;
    transform: scale(1.02);
  }
  .s-block--reviews1 .swiper-slide-active .r1-text {
    color: #111 !important;
  }

  /* Optional: de-emphasize neighbors */
  .s-block--reviews1 .swiper-slide-prev .r1-card,
  .s-block--reviews1 .swiper-slide-next .r1-card {
    opacity: 0.75;
    filter: grayscale(0.1);
    transform: scale(0.99);
  }

  .s-block--reviews1 .r1-empty {
    text-align: center;
    padding: 18px;
    opacity: 0.75;
    font-family: Cairo, sans-serif;
  }

  /* ✅ Remove swiper controls on mobile & web (arrows + dots + salla controls) */
  .s-block--reviews1 .swiper-button-next,
  .s-block--reviews1 .swiper-button-prev,
  .s-block--reviews1 [class*="swiper-button"] {
    display: none !important;
  }
  .s-block--reviews1 .swiper-pagination,
  .s-block--reviews1 [class*="swiper-pagination"] {
    display: none !important;
  }
  .s-block--reviews1 .s-slider-controls,
  .s-block--reviews1 .s-slider-nav,
  .s-block--reviews1 .s-slider-pagination {
    display: none !important;
  }

  /* ✅ Mobile: show 1 active + peek next */
  @media (max-width: 768px) {
    .s-block--reviews1 .s-reviews-header {
      font-size: 26px;
    }

    .s-block--reviews1 .reviews1-slider {
      padding-inline-start: 14px;
      padding-inline-end: 0;
      overflow: visible !important;
    }

    .s-block--reviews1 .reviews1-slider .swiper,
    .s-block--reviews1 .reviews1-slider .swiper-wrapper {
      overflow: visible !important;
    }

    .s-block--reviews1 .reviews1-slider .swiper-slide {
      width: 88% !important; /* peek next */
      padding: 0 8px;
    }

    .s-block--reviews1 .r1-quote {
      top: -8px;
      inset-inline-start: -8px;
    }
  }
</style>
{% endblock %}
